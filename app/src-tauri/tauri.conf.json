{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Epic Local AI Toys",
  "version": "0.1.0",
  "identifier": "com.pixm8.epic-local-ai-toys",
  "build": {
    "beforeDevCommand": "npm run prepare:python-runtime && npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run prepare:python-runtime && npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Epic Local AI Toys",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost data: blob:; media-src 'self' asset: http://asset.localhost data: blob:; connect-src 'self' http://127.0.0.1:* ws://127.0.0.1:* http://localhost:* ws://localhost:* ipc:;",
      "assetProtocol": {
        "enable": true,
        "scope": ["$DATA/**/images/*", "$DATA/**/images/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "../../resources/python-backend",
      "../../resources/python_runtime"
    ],
    "macOS": {
      "infoPlist": "./Info.plist",
      "entitlements": "./entitlements.plist",
      "hardenedRuntime": true,
      "signingIdentity": null,
      "providerShortName": null
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
